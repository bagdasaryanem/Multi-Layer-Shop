@model IEnumerable<MultiLayerApp.Models.Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Category List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Category</a>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <form method="post">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Category Name
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            <div class="text-center">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-success text-white"
                                   style="cursor: pointer">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>
                                &nbsp;
                                <button asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')"
                                        class="btn btn-danger text-white" style="cursor: pointer">
                                    <i class="fas fa-trash-alt"></i>
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Categories Exists.</p>
        }
    </form>

</div>