@model IEnumerable<MultiLayerApp.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product List </h2>
    </div>
</div>

<div class="main">
    <div class="filter m-2">
        <form asp-action="Index" method="get">
            <div class="price">
                <label class="form-label">Price</label>
                <div class="price-flexbox">
                    <div class="mx-1">
                        <input type="number"
                               name="priceFrom"
                               value=""
                               class="form-control"
                               id="from"
                               placeholder="From" />
                    </div>
                    -
                    <div class="mx-1">
                        <input type="number"
                               name="priceTo"
                               value=""
                               class="form-control"
                               id="to"
                               placeholder="To" />
                    </div>
                </div>
            </div>

            <div class="name mt-2">
                <label for="phoneName" class="form-label">Name</label>
                <input type="text"
                       name="searchString"
                       value=""
                       class="form-control"
                       id="phoneName"
                       placeholder="Phone name" />
            </div>

            <div class="manufacturer mt-2">
                <label for="manufacturer" class="form-label">Manufacturer</label>
                <select class="form-select" id="manufacturer" name="manufacturer" style="color: gray;">
                    <option value="" selected>Choose an option</option>
                    <option value="samsung">Samsung</option>
                    <option value="apple">Apple</option>
                    <option value="xiaomi">Xiaomi</option>
                </select>
            </div>
            <div class="search mt-3">
                <button type="submit" class="btn btn-primary">
                    Search
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="16"
                         height="16"
                         fill="currentColor"
                         class="bi bi-search"
                         viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                        <path fill-rule="evenodd"
                              d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    </svg>
                </button>
                <a asp-action="Index" class="btn btn-link">Remove Filter </a>
            </div>
        </form>
    </div>

    <div class="container phone-grid">
        <form method="post">
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <!-- Phone -->
                        <div class="col-sm-4 p-2 phone-grid-item">
                            <div class="phone-grid-item-content">
                                <div class="card">
                                    @if (item.Photos != null)
                                    {
                                        <a asp-controller="Home" asp-action="PhoneDetails" asp-route-id="@item.Id"><img src="@Html.DisplayFor(m => item.Photos)" style="width: 50%; height: 180px;" /></a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Home" asp-action="PhoneDetails" asp-route-id="@item.Id"><img src="/images/unnamed.png" style="width: 50%; height: 180px;" /></a>
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title"><a asp-controller="Home" asp-action="PhoneDetails" asp-route-id="@item.Id">@item.Name</a></h5>
                                        <div class="price">
                                            <p>@Html.DisplayFor(m => item.Price) ₾</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Phone -->
                    }
                }
            </div>
        </form>
    </div>
</div>